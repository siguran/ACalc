<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ThemeWater" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <item name="android:colorPrimary">@color/purple_500</item>
        <item name="android:colorPrimaryDark">@color/teal_700</item>
        <item name="android:navigationBarColor">@color/water_other</item>
        <item name="android:windowBackground">@color/water_main</item>
        <item name="android:statusBarColor">@color/water_other</item>

        <item name="buttonStyle">@style/ButtonsWater</item>

        <item name="actionBarTheme">@style/ActionBarWater</item>
        <item name="android:textViewStyle">@style/TextViewWater</item>
    </style>


    <style name="ActionBarWater"  parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:textColorPrimary">@color/water_main</item>

    </style>


    <style name="TextViewWater"  parent="Base.Widget.AppCompat.TextView">
        <item name="android:background">@color/water_textview</item>
    </style>


    <style name="ButtonsWater"  parent="Base.Widget.AppCompat.Button">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/water_main</item>
        <item name="android:background">@drawable/btn_water</item>

    </style>


</resources>